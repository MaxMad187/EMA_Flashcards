<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_attitude_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_accent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/main_attitude_header_avatar_image_view"
            android:layout_width="36dp"
            android:layout_height="31dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:tint="@color/color_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_avatar"
            android:contentDescription="@string/main_avatar_image" />

        <TextView
            android:id="@+id/main_attitude_profile_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/color_light"
            android:text="@string/main_attitude_profile_text_view"
            android:textColor="@color/color_light"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/main_attitude_header_avatar_image_view"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/main_attitude_open_button"
        android:layout_width="245dp"
        android:layout_height="58dp"
        android:layout_marginBottom="24dp"
        android:text="@string/main_attitude_open_button"
        app:backgroundTint="@color/color_dialog"
        app:layout_constraintBottom_toTopOf="@+id/main_attitude_rename_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_attitude_header"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/main_attitude_rename_button"
        android:layout_width="245dp"
        android:layout_height="58dp"
        android:layout_marginBottom="24dp"
        android:text="@string/main_attitude_rename_button"
        app:backgroundTint="@color/color_dialog"
        app:layout_constraintBottom_toTopOf="@+id/main_attitude_delete_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_attitude_open_button" />

    <Button
        android:id="@+id/main_attitude_delete_button"
        android:layout_width="245dp"
        android:layout_height="58dp"
        android:layout_marginBottom="24dp"
        android:text="@string/main_attitude_delete_button"
        app:backgroundTint="@color/color_dialog"
        app:layout_constraintBottom_toTopOf="@+id/main_attitude_close_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_attitude_rename_button" />

    <Button
        android:id="@+id/main_attitude_close_button"
        android:layout_width="245dp"
        android:layout_height="58dp"
        android:text="@string/main_attitude_close_button"
        app:backgroundTint="@color/color_dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_attitude_delete_button" />

</androidx.constraintlayout.widget.ConstraintLayout>